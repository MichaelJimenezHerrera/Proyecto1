<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/js/bootstrap") 
    @Scripts.Render("~/bundles/jquery")
</head>

<body id="body">
   <nav class="navbar navbar-inverse " role="navigation">    
         <div >
             
             <a id="1" href="/Home/Home" role="button" class="btn btn-default active" onclick="showAnswer(1)"data-toggle="modal">Home</a>
       <a id="2"href="/Home/Contact" role="button" class="btn btn-default " onclick="showAnswer(2)"data-toggle="modal">Contact</a>
       <a id="3"href="/Home/Recommend" role="button" class="btn btn-default " onclick="showAnswer(3)"data-toggle="modal">Recommend</a>
       <a id="4" href="/Home/Recommendations" role="button" class="btn btn-default " onclick="showAnswer(4)"data-toggle="modal">Recommendations</a>
            
         </div> 
      
     

   </nav>

    $(document).ready(function() 

    <script type="text/javascript">
        function showAnswer(questionNumber) {
            switch (questionNumber) {
                case 1:
                    $("#1").addClass("active");
                    $("#2").removeClass("active");
                    $("#3").removeClass("active");
                    $("#4").removeClass("active");
                    break;
                case 2:
                    $("#2").addClass("active");
                    $("#1").removeClass("active");
                    $("#3").removeClass("active");
                    $("#4").removeClass("active");
                    break;
                case 3:
                    $("#3").addClass("active");
                    $("#2").removeClass("active");
                    $("#1").removeClass("active");
                    $("#4").removeClass("active");
                    break;
                case 4:
                    $("#4").addClass("active");
                    $("#2").removeClass("active");
                    $("#3").removeClass("active");
                    $("#1").removeClass("active");
                    break;
                default:
                    alert('sorry there was an error in program');
            }
        }
      
</script>
   @RenderBody()
    @RenderSection("scripts", required: false)

   
     
     

    
</body>
</html>