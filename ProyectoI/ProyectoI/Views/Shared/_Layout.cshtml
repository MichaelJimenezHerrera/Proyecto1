<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/js/bootstrap") 
    @Scripts.Render("~/bundles/jquery")
</head>
    

<body id="body">
     <nav class="navbar navbar-inverse " role="navigation">
          
            <div id="container">  
                <ul class="menu">  
                    <li id="Home"><a  href="/Home/Home" >Home</a></li>  
                    <li id="Contact"><a  href="/Home/Contact" >Contact</a></li>  
                    <li id="Recommend"><a  href="/Home/Recommend" >Recommend</a></li>
                    <li id="Recommendations"><a  href="/Home/Recommendations" >Recommendations</a></li>  
                </ul>  
            </div>  
     
      <script type="text/javascript">
          $(document).ready(function () {
              $(".menu > li").click(function (e) {
                  var a = e.target.id;
                  //desactivamos seccion y activamos elemento de menu  
                  $(".menu li.active").removeClass("active");
                  $(".menu #" + a).addClass("active");
                  //ocultamos divisiones, mostramos la seleccionada  
                  $(".content").css("display", "none");
                  $("." + a).fadeIn();
              });
          });
</script>
        
        <marquee scrollamount="3" behavior="alternate" bgcolor="#FFA100" > 
           <div id="carr" >
             <img id="i1"src="~/Content/themes/base/images/1.jpg" runat="server"/>
             <img id="i2"src="~/Content/themes/base/images/2.jpg"  runat="server"/>
             <img id="i3"src="~/Content/themes/base/images/3.jpg"  runat="server"/>
             <img id="i4"src="~/Content/themes/base/images/4.jpg"   runat="server"/>
             <img id="i5"src="~/Content/themes/base/images/5.jpg"   runat="server"/>
             <img id="i6"src="~/Content/themes/base/images/6.jpg" runat="server"/>
             <img id="i7"src="~/Content/themes/base/images/7.jpg"   runat="server"/>
             <img id="i8"src="~/Content/themes/base/images/8.jpg"   runat="server"/>
             <img id="i9"src="~/Content/themes/base/images/9.jpg"   runat="server"/>
             <img id="i10"src="~/Content/themes/base/images/10.jpg"   runat="server"/>
          </div> 
       </marquee>
   </nav>



  
   @RenderBody()
    @RenderSection("scripts", required: false)

   
     
     

    
</body>
</html>